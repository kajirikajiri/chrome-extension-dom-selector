{
  "manifest_version": 2,

  "name": "dom-selector",
  "description": "sample",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "icon16-loading.png"
  },

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content_scripts.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": ["mainMenu.html", "endButton.html", "eventList.html", "eventPlayer.html"],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["tabs", "storage", "management"]
}

